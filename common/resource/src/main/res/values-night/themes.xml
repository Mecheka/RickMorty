<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickMorty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_primary</item>
        <item name="colorSecondaryVariant">@color/red_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/color_background_dark</item>
        <item name="colorOnBackground">@color/color_background_dark</item>
        <item name="colorSurface">@color/cardview_dark_background</item>
        <item name="colorOnSurface">@color/cardview_dark_background</item>
    </style>
</resources>